
" Config  
  " basics
syntax sync fromstart
filetype plugin indent on
syntax on 
set number
set relativenumber
set incsearch
set ignorecase
set smartcase
set nohlsearch
set tabstop=2
set softtabstop=0
set shiftwidth=2
set expandtab
set nobackup
set noswapfile
set nowrap
set shortmess+=c
set updatetime=300
set cmdheight=2
set hidden
set foldmethod=indent
set splitright
set splitbelow
